[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
max-complexity = 10
select = B,C,E,F,W,T4,B9
per-file-ignores =
    # Tests can have longer lines and more complex assertions
    tests/*:E501,C901
    # Configuration files can ignore some complexity
    */config.py:C901
    # Migration files can be more complex
    migrations/*:C901,E501

exclude =
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    migrations/versions/*
