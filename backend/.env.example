# AI Tech News Assistant - Environment Configuration Template
# Copy this file to .env and configure your environment-specific values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment: development, staging, production, testing
ENVIRONMENT=development

# Debug mode (NEVER enable in production)
DEBUG=true

# Secret key for JWT and security (generate a strong 32+ character key)
SECRET_KEY=your-super-secret-key-change-this-in-production-at-least-32-chars

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name and version
APP_NAME=AI Tech News Assistant
APP_VERSION=1.0.0

# Server configuration
HOST=0.0.0.0
PORT=8000

# CORS settings (restrict in production)
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type: sqlite, postgresql, mysql
DATABASE_TYPE=sqlite

# Database URL (for PostgreSQL/MySQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_tech_news

# SQLite database path (when using SQLite)
SQLITE_DATABASE_PATH=./data/database.db

# Database connection settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# Default LLM provider: openai, anthropic, huggingface, ollama
DEFAULT_LLM_PROVIDER=ollama

# OpenAI Configuration
# OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30

# Anthropic Configuration
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=1000
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_TIMEOUT=30

# HuggingFace Configuration
# HUGGINGFACE_API_KEY=your-huggingface-api-key-here
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium
HUGGINGFACE_TIMEOUT=30

# Ollama Configuration (for local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=60
OLLAMA_KEEP_ALIVE=5m

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================

# Embedding model settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DIMENSIONS=384
EMBEDDING_TIMEOUT=30

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================

# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
VECTOR_SIMILARITY_THRESHOLD=0.7
VECTOR_MAX_RESULTS=10

# =============================================================================
# NEWS SOURCES CONFIGURATION
# =============================================================================

# RSS feed settings
RSS_TIMEOUT=10
RSS_MAX_ARTICLES=100
RSS_UPDATE_INTERVAL=3600

# RSS Sources (JSON format - will use defaults if not specified)
# RSS_SOURCES=[{"name": "Custom Feed", "url": "https://example.com/feed.xml", "description": "Custom news feed"}]

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log file path (optional - logs to console if not specified)
# LOG_FILE=./logs/app.log

# Log rotation settings
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# ERROR HANDLING & MONITORING
# =============================================================================

# Error handling settings
ENABLE_ERROR_MIDDLEWARE=true
ENABLE_CORRELATION_ID=true
ERROR_DETAIL_IN_RESPONSE=false

# Retry and resilience settings
DEFAULT_RETRY_ATTEMPTS=3
DEFAULT_RETRY_DELAY=1.0
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Monitoring settings
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_TIMEOUT=5.0

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limiting settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# EXTERNAL SERVICE TIMEOUTS
# =============================================================================

# Service timeout settings (seconds)
LLM_REQUEST_TIMEOUT=30.0
EMBEDDING_REQUEST_TIMEOUT=15.0
NEWS_FETCH_TIMEOUT=10.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS settings
ENABLE_CORS=true

# Content and security limits
MAX_CONTENT_LENGTH=16777216
TRUSTED_HOSTS=["*"]

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Cache settings
ENABLE_CACHING=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development features (disable in production)
AUTO_RELOAD=true
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false
